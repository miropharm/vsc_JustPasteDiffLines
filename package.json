{
  "name": "just-paste-diff-lines",
  "displayName": "Just Paste Diff Lines",
  "description": "Paste + / - diffs and preview/apply them in VSCode",
  "version": "1.0.0",
  "publisher": "muvu",
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onView:diffView",
    "onCommand:justPasteDiff.openPanel"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "diffContainer",
          "title": "Diff Tool",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "diffContainer": [
        {
          "id": "diffView",
          "name": "Diff Panel",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "justPasteDiff.openPanel",
        "title": "Just Paste Diff: Open Panel"
      },
      {
        "command": "diffView.applyPatch",
        "title": "Just Paste Diff: Apply Patch"
      },
      {
        "command": "diffView.previewPatch",
        "title": "Just Paste Diff: Preview Patch"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npx --no-install vsce package"
  },
  "devDependencies": {
    "vsce": "^2.15.0"
  }
}
